<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorStatusBarBg"
    tools:context="com.trust.shengyu.calltaxi.activitys.registerandlogin.LoginActivity">


    <ImageView
        android:layout_marginTop="@dimen/y50"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        style="@style/IndentationAbout"
        android:layout_marginTop="@dimen/y10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <EditText
            android:hint="手机号:"
            android:drawableLeft="@mipmap/ic_launcher"
            android:inputType="number"
            android:id="@+id/registerex_user"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            />

    </LinearLayout>


    <View
        style="@style/IndentationAbout"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        style="@style/IndentationAbout"
        >

        <EditText
            android:hint="请输入验证码"
            android:drawableLeft="@mipmap/ic_launcher"
            android:inputType="numberPassword"
            android:textColor="@color/colorAccent"
            android:id="@+id/registere_verification_code"
            android:gravity="center_vertical"
            android:layout_width="@dimen/x185"
            android:layout_height="wrap_content"
            android:background="@null"
            />

        <Button
            android:id="@+id/registere_verification_code_btn"
            android:textSize="@dimen/x14"
            android:background="@null"
            android:text="| 获取验证码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        style="@style/IndentationAbout"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        style="@style/IndentationAbout"
        >

        <EditText
            android:drawableLeft="@mipmap/ic_launcher"
            android:hint="密码:"
            android:inputType="numberPassword"
            android:textColor="@color/colorAccent"
            android:id="@+id/registere_pwd"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            />

    </LinearLayout>

    <View
        style="@style/IndentationAbout"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>




    <Button
        android:layout_marginTop="@dimen/y10"
        android:id="@+id/registere_submit"
        android:text= "注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/IndentationAbout"
        />


    <LinearLayout
        android:id="@+id/registered_login"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="已有账号?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="立即登录!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
