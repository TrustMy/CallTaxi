<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_map_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.trust.shengyu.calltaxidriver.activitys.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/main_base_include"
                layout="@layout/toor_layout"></include>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y50"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="@dimen/x14"
                            android:layout_width="@dimen/x50"
                            android:layout_height="@dimen/x50"
                            android:src="@mipmap/user_log" />

                        <LinearLayout
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_width="@dimen/x140"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="姓名" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_girl" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="车牌号:" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="xxxxx" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的位置" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="xxxxxx" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginRight="@dimen/x14"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的评级" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star_true" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star_true" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star_true" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star_flase" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star_flase" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c4c4c4"></View>

                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginLeft="@dimen/x14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="在线" />

                            <TextView
                                android:layout_marginLeft="@dimen/x4"
                                android:textSize="@dimen/y14"
                                android:textColor="#f3ce1d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2" />

                            <TextView
                                android:layout_marginLeft="@dimen/x4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="小时" />
                        </LinearLayout>


                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_marginRight="@dimen/x14"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="今天共抢" />

                            <TextView
                                android:textSize="@dimen/y14"
                                android:textColor="#f3ce1d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="单" />
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/main_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/y3"></android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/main_recycler_show_unread_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/main_recycler_show_unread_read_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#ff0000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未读消息"
                        android:textColor="#ff0000" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </FrameLayout>



    <!--android:layout_gravity = "start"-->
    <LinearLayout
        android:layout_gravity = "start"
        android:fitsSystemWindows="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@color/colorWhite">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:background="@color/colorStatusBarBg">


            <ImageButton
                android:id="@+id/main_drawerlayout_black"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginTop="@dimen/y10"
                android:background="@null"
                android:src="@drawable/ic_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_marginTop="@dimen/y10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x38"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/x70"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="10dp"
                    card_view:cardCornerRadius="0dp"
                    >
                    <ImageView
                        android:id="@+id/main_drawerlayout_user_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/user_log" />

                </android.support.v7.widget.CardView>






                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y14"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_marginTop="@dimen/y10"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/main_drawerlayout_user_name"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="追风"
                        android:textSize="@dimen/y12" />

                    <ImageView
                        android:id="@+id/main_drawerlayout_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x14"
                        android:src="@drawable/ic_girl" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y8"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/main_drawerlayout_user_status"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="认证用户" />

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车牌号" />

                    <TextView
                        android:id="@+id/main_drawerlayout_credit_points"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="沪Axxxxx" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_drawerlayout_trip_history_btn"
            android:layout_marginLeft="@dimen/x42"
            android:layout_marginTop="@dimen/y20"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/ic_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/y12"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:text="行程记录"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/x42"
            android:layout_marginTop="@dimen/y16"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/ic_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/y12"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:text="我的钱包"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="@dimen/x42"
            android:layout_marginTop="@dimen/y16"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/ic_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:text="邀请好友"
                android:textSize="@dimen/y12"
                android:textStyle="bold" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="@dimen/x42"
            android:layout_marginTop="@dimen/y16"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/ic_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x17"
                android:gravity="center"
                android:text="使用指南"
                android:textSize="@dimen/y12"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
